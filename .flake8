[flake8]
# Base settings:
max-line-length = 88
extend-ignore = E203, W503 # E203: whitespace before ':', W503: line break before binary operator (often conflicts with black)
# select = E,W,F # Default, but can be explicit
# ignore = # Add specific error codes to ignore if necessary

# Plugins (if you use them, e.g., flake8-bugbear, flake8-comprehensions):
# enable-extensions = B, C4

# Per-file ignores (example):
# per-file-ignores =
#     */__init__.py:F401 # Ignore F401 (unused import) in __init__.py files
#     tests/*:S101 # Ignore S101 (assert_used) in test files (if using flake8-bandit)

# Complexity settings:
max-complexity = 10 # McCabe complexity

# Docstring checks (if using flake8-docstrings):
# docstring-convention = google # or numpy, pep257

# Import order checks (if using flake8-isort, though isort itself is usually run separately):
# application-import-names = subcipher, tests
# application-package-names = subcipher
